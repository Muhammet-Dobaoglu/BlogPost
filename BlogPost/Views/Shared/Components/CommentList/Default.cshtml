@model List<Comment>

<div class="comment-top">

    @if (Model.Count() > 0)
    {

        <h4>Yorumlar</h4>
    }
    else
    {
        <h4>Hiç Yorum Yapılmamış. İlk Yorumu Sen Yap</h4>
    }


    @foreach (var item in Model)
    {
        <div class="media">

            <img src="@item.CommentImage" alt="" class="img-fluid rounded-circle" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>

            </div>

        </div>
    }

